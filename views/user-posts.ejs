<%- include('includes/header') %>
<div class="container py-md-5 container--narrow">
    <%- include('includes/flash') %>
    <%- include('includes/profile-header') %>

    <div class="list-group">
        <% posts.forEach(post => { %>
            <a href="/post/<%= post._id %>" class="list-group-item list-group-item-action">
                <img class="avatar-tiny" src="<%= user.avatar %>">
                    <strong><%= post.title %></strong> on <%= post.createdDate.getMonth() + 1 %>/<%= post.createdDate.getDay() %>/<%= post.createdDate.getFullYear() %>
            </a>
        <% }) %>
    </div>
</div>
<%- include('includes/footer') %>