<h2><img class="avatar-small" src="<%= user.avatar %>"> <%= user.username %>

    <% if(followed) { %>
        <form class="ml-2 d-inline" action="/removeFollow/<%= user.username %>" method="POST">
            <button class="btn btn-danger btn-sm">Unfollow <i class="fas fa-user-times"></i></button>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        </form>
    <% } else { %>
        <form class="ml-2 d-inline" action="/addFollow/<%= user.username %>" method="POST">
            <button class="btn btn-primary btn-sm">Follow <i class="fas fa-user-plus"></i></button>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        </form>
    <% } %>
</h2>

<div class="profile-nav nav nav-tabs pt-2 mb-4">
    <a href="#" class="profile-nav-link nav-item nav-link active">Posts: <%= postsCount %></a>
    <a href="#" class="profile-nav-link nav-item nav-link ">Followers: <%= followerCount %></a>
    <a href="#" class="profile-nav-link nav-item nav-link ">Following: <%= followingCount %></a>
</div>